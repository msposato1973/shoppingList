<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dc</groupId>
  <artifactId>shoppingList</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>Demo project for  a simple program that calculates the price of a basket of shopping.</description>
  
  <properties>
   		<java.build>8</java.build>
   </properties>
  
  <dependencies>
 		<dependency>
	      <groupId>junit</groupId>
	      <artifactId>junit</artifactId>
	      <version>4.12</version>
	      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.build}</source>
          <target>${java.build}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>